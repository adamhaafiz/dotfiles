# RubyGems complains immediately that the path to `ruby` isn't in $PATH
# TODO: find out if asdf fixes this
# Update PATH with path to Ruby and .local/bin for asdf
export PATH=$HOME/.local/bin:$HOME/.gem/ruby/2.6.0/bin:$PATH
Â 
# Declare ZSH environment variable with path to Oh My Zsh installation
export ZSH="$HOME/.oh-my-zsh"

# YOLO!
ZSH_THEME="random"

# Declare array of plugins
plugins=(git asdf zsh-z auto-color-ls zsh-syntax-highlighting)

# Run the oh-my-zsh script
source $ZSH/oh-my-zsh.sh