# Update PATH with path to asdf shims
export PATH=$HOME/.local/bin:$PATH

# Declare ZSH environment variable with path to Oh My Zsh installation
export ZSH="$HOME/.oh-my-zsh"

# YOLO!
ZSH_THEME="random"

# Declare array of plugins
plugins=(git asdf zsh-z auto-color-ls zsh-syntax-highlighting)

# Run the oh-my-zsh script
source $ZSH/oh-my-zsh.sh

# https://stackoverflow.com/a/55993078
export GPG_TTY=$(tty)